@using AspNetWebApp.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "DepartmanPersonelSatis";
    Layout = "~/Views/Shared/_KategoriLayout.cshtml";
}


<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Departman Personel Satış</h1>
                </div>

                <ol class="breadcrumb mb-4">
                    <li class="breadcrumb-item active">@ViewBag.DepartmanPersonelAdi</li>
                </ol>

                @*<div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Anasayfa</a></li>
                            <li class="breadcrumb-item active">Kategoriler</li>
                        </ol>
                    </div>*@
            </div>
        </div>
        <!--  /.container-fluid-->
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">


                        <div class="card-body">
                            @(Html
                                    .Grid(Model)
                                    .Build(columns =>
                                    {
                                        columns.Add(model => model.SatisID).Titled("Satış Id");
                                        columns.Add(model => model.Uruns.UrunAd).Titled("Ürün Adı");
                                        columns.Add(model => model.Cariler.CariAd+" " +model.Cariler.CariSoyad).Titled("Cari");
                                        columns.Add(model => model.Fiyat).Titled("Fiyat");
                                        columns.Add(model => model.Adet).Titled("Adet");
                                        columns.Add(model => model.ToplamTutar).Titled("Toplam Tutar");
                                        columns.Add(model => model.Tarih).Titled("Tarih");
                                        columns.Add(model => "<a class=\"btn btn-block btn-success\"  href=DepartmanGetir/" + model.SatisID + ">Yazdır</a>").Encoded(false);
                                        //columns.Add(model => "<a class=\"btn btn-block btn-danger\"  href="+ "https://localhost:44348/Departman/" + "DepartmanPersonelSatis/" + model.PersonelID + ">Personel Satış</a>").Encoded(false);
                                        //columns.Add(model => "<a class=\"btn btn-block btn-success\"  href=DepartmanGetir/" + model.DepartmanID + ">Düzenle</a>").Encoded(false);
                                        //columns.Add(model => "<a class=\"btn btn-block btn-info\"  href=DepartmanDetay/" + model.DepartmanID + ">Detay</a>").Encoded(false);

                                    })
                                    .Empty("Kayıt bulunamadı")
                                    .Filterable()
                                    .Sortable()
                                    .Pageable()
                                )

                        </div>

                        <!--   /.card-body-->
                    </div>
                    <!--  /.card-->
                </div>
                <!--  /.col-->
            </div>
            <!--  /.row-->
        </div>
        <!-- /.container-fluid -->
    </section>



</div>
