@model AspNetWebApp.Models.Siniflar.Personel
@{
    ViewBag.Title = "PersonelGetir";
    Layout = "~/Views/Shared/_KategoriLayout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Personel Güncelleme</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Kategoriler</li>
                    </ol>
                </div>
            </div>
        </div>
        <!--  /.container-fluid-->
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">


                        <div class="card-body">
                            @using (Html.BeginForm("PersonelGuncelle", "Personel", FormMethod.Post))
                            {

                            <div class="form-group">
                                @Html.Label("Adı")
                                @Html.TextBoxFor(x => x.PersonelAd, new { @class = "form-control" })
                                @*@Html.ValidationMessageFor(x => x.PersonelAd, "", new { @style = "color:red" })*@
                                <br />
                                @Html.Label("Soyadı")
                                @Html.TextBoxFor(x => x.PersonelSoyad, new { @class = "form-control" })
                                @*@Html.ValidationMessageFor(x => x.PersonelSoyad, "", new { @style = "color:red" })*@
                                <br />
                                @Html.Label("Görsel")
                                @Html.TextBoxFor(x => x.PersonelGorsel, new { @class = "form-control" })
                                @Html.Label("Departman")
                                @Html.DropDownListFor(x => x.Departmanid, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
                                @Html.HiddenFor(x => x.PersonelID)
                            </div>
                                <button class="btn btn-warning">Güncelle</button>

                            }

                        </div>

                        <!--   /.card-body-->
                    </div>
                    <!--  /.card-->
                </div>
                <!--  /.col-->
            </div>
            <!--  /.row-->
        </div>
        <!-- /.container-fluid -->
    </section>



</div>