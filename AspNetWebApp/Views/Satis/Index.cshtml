@using AspNetWebApp.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_KategoriLayout.cshtml";
}


<!-- Content Wrapper. Contains page content-->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Personeller</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Kategoriler</li>
                    </ol>
                </div>
            </div>
        </div>
        <!--  /.container-fluid-->
    </section>
    <!--  Main content-->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="col-2">
                                @*<button class="btn btn-block btn-primary">Yeni Kayıt</button>*@
                                <a href="~/Satis/YeniSatis" class="btn btn-block btn-primary">Yeni Satış Yap</a>
                            </div>
                        </div>
                        <!--  /.card-header-->
                        <a href="~/App_Data/"></a>

                        <div class="card-body">
                            @(Html
        .Grid(Model)
        .Build(columns =>
        {
            columns.Add(model => model.SatisID).Titled("ID");
            columns.Add(model => model.Uruns.UrunAd).Titled("Ürün");
            columns.Add(model => model.Cariler.CariAd).Titled("Cari");
            columns.Add(model => model.Personel.PersonelAd).Titled("Personel");
            columns.Add(model => model.Adet).Titled("Adet");
            columns.Add(model => model.Fiyat).Titled("Fiyat");
            columns.Add(model => model.ToplamTutar).Titled("Toplam");
            columns.Add(model => model.Tarih).Titled("Tarih");
            //columns.Add(model => "<a class=\"btn btn-block btn-danger\"  href=PersonelSil/" + model.PersonelID + ">Sil</a>").Encoded(false);
            columns.Add(model => "<a class=\"btn btn-block btn-success\"  href=SatisGetir/" + model.SatisID + ">Düzenle</a>").Encoded(false);
            columns.Add(model => "<a class=\"btn btn-block btn-info\"  href=" + "https://localhost:44348/Satis/" + "SatisDetay/" + model.SatisID + ">Detaylar</a>").Encoded(false);
            //columns.Add(model => "<button class=\"btn btn-block btn-danger\" data-id=\"" + model.KategoriID + "\">Sil</button>").Encoded(false);
            //columns.Add(model => "<a class=\"btn btn-block btn-info\"  href=Index/\"" + model.KategoriID + "\">Düzenle</a>").Encoded(false);

        })
        .Empty("Kayıt bulunamadı")
        .Filterable()
        .Sortable()
        .Pageable()
    )
                        </div>

                        <!--   /.card-body-->
                    </div>
                    <!--  /.card-->
                </div>
                <!--  /.col-->
            </div>
            <!--  /.row-->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
