@model AspNetWebApp.Models.Siniflar.Cariler
@{
    ViewBag.Title = "CariGetir";
    Layout = "~/Views/Shared/_KategoriLayout.cshtml";
}


<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Cari Güncelleme</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Kategoriler</li>
                    </ol>
                </div>
            </div>
        </div>
        <!--  /.container-fluid-->
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">


                        <div class="card-body">
                            @using (Html.BeginForm("CariGuncelle", "Cari", FormMethod.Post))
                            {

                            <div class="form-group">
                                @Html.Label("Adı")
                                @Html.TextBoxFor(x => x.CariAd, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.CariAd, "", new { @style = "color:red" })
                                <br />
                                @Html.Label("Soyadı")
                                @Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.CariSoyad, "", new { @style = "color:red" })
                                <br />
                                @Html.Label("Şehir")
                                @Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control" })
                                @Html.Label("E-posta")
                                @Html.TextBoxFor(x => x.CariMail, new { @class = "form-control" })
                                @Html.HiddenFor(x => x.CariID)
                            </div>
                                <button class="btn btn-warning">Güncelle</button>

                            }

                        </div>

                        <!--   /.card-body-->
                    </div>
                    <!--  /.card-->
                </div>
                <!--  /.col-->
            </div>
            <!--  /.row-->
        </div>
        <!-- /.container-fluid -->
    </section>



</div>
