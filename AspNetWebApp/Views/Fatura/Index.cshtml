@using AspNetWebApp.Models.Siniflar
@model IEnumerable<Faturalar>
@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_KategoriLayout.cshtml";
}

<!-- Content Wrapper. Contains page content-->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Faturalar</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Kategoriler</li>
                    </ol>
                </div>
            </div>
        </div>
        <!--  /.container-fluid-->
    </section>
    <!--  Main content-->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="col-2">
                                @*<button class="btn btn-block btn-primary">Yeni Kayıt</button>*@
                                <a href="~/Fatura/FaturaEkle" class="btn btn-block btn-primary">Yeni Fatura Girişi</a>
                            </div>
                        </div>
                        <!--  /.card-header-->
                        <a href="~/App_Data/"></a>

                        <div class="card-body">
                            @(Html
        .Grid(Model)
        .Build(columns =>
        {
            columns.Add(model => model.FaturaID).Titled("Fatura ID");
            columns.Add(model => model.FaturaSeriNo).Titled("Fatura Seri No");
            columns.Add(model => model.FaturaSiraNo).Titled("Fatura Sıra No");
            columns.Add(model => model.Tarih).Titled("Tarih");
            columns.Add(model => model.VergiDairesi).Titled("Vergi Dairesi");
            columns.Add(model => model.Saat).Titled("Saat");
            columns.Add(model => model.TeslimEden).Titled("Teslim Eden");
            columns.Add(model => model.TeslimAlan).Titled("Teslim Alan");
            columns.Add(model => model.Toplami).Titled("Toplam");
            columns.Add(model => "<a class=\"btn btn-block btn-danger\"  href=FaturaSil/" + model.FaturaID + ">Sil</a>").Encoded(false);
            columns.Add(model => "<a class=\"btn btn-block btn-success\"  href=FaturaGetir/" + model.FaturaID + ">Düzenle</a>").Encoded(false);
            columns.Add(model => "<a class=\"btn btn-block btn-info\"  href=FaturaDetay/" + model.FaturaID + ">Detay</a>").Encoded(false);
            //columns.Add(model => "<button class=\"btn btn-block btn-danger\" data-id=\"" + model.KategoriID + "\">Sil</button>").Encoded(false);
            //columns.Add(model => "<a class=\"btn btn-block btn-info\"  href=Index/\"" + model.KategoriID + "\">Düzenle</a>").Encoded(false);

        })
        .Empty("Kayıt bulunamadı")
        .Filterable()
        .Sortable()
        .Pageable()
    )
                        </div>

                        <!--   /.card-body-->
                    </div>
                    <!--  /.card-->
                </div>
                <!--  /.col-->
            </div>
            <!--  /.row-->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
