@model  AspNetWebApp.Models.Siniflar.Faturalar

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_KategoriLayout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Yeni Fatura Sayfası</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Kategoriler</li>
                    </ol>
                </div>
            </div>
        </div>
        <!--  /.container-fluid-->
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">


                        <div class="card-body">
                            <form class="form-group" action="~/Fatura/FaturaEkle" method="post">
                                @Html.Label("Fatura Seri No")
                                @Html.TextBoxFor(x => x.FaturaSeriNo, new { @class = "form-control" })
                                <br />
                                @Html.Label("Fatura Sıra No")
                                @Html.TextBoxFor(x => x.FaturaSiraNo, new { @class = "form-control" })
                                <br />
                                @Html.Label("Tarih")
                                @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
                                <br />
                                @Html.Label("Saat")
                                @Html.TextBoxFor(x => x.Saat, new { @class = "form-control" })
                                <br />
                                @Html.Label("Vergi Dairesi")
                                @Html.TextBoxFor(x => x.VergiDairesi, new { @class = "form-control" })
                                <br/>
                                @Html.Label("Teslim Eden")
                                @Html.TextBoxFor(x => x.TeslimEden, new { @class = "form-control" })
                                <br />
                                @Html.Label("Teslim Alan")
                                @Html.TextBoxFor(x => x.TeslimAlan, new { @class = "form-control" })
                                                                                                
                            <br />
                                <button class="btn btn-success">Kaydet</button>
                            </form>

                        </div>

                        <!--   /.card-body-->
                    </div>
                    <!--  /.card-->
                </div>
                <!--  /.col-->
            </div>
            <!--  /.row-->
        </div>
        <!-- /.container-fluid -->
    </section>



</div>
